<%= render "shared/header" %>

<%= render "shared/lists" %>

<div class="wrapper">
  <div class="side-bar">
    <div class="memo-lists">
      <h1>~Memo lists~</h1>
    </div>
    <div class="display-btn">
      <h4>display</h5>
    </div>
  </div>
  <div class="chat">
    <div class="chat-header">
      <% if @room.user.image? %>
        <div class="create-user-image">
          <%= image_tag @room.user.image.url %>
        </div>  
      <% end %>
      <div class="create-user-name">
         <%= @room.user.name %>
      </div>
      <% if current_user.id == @room.user_id %>
        <div class="delete-btn">
          <%= button_to "delete the room", {controller: "rooms", action: "destroy"}, { method: :delete } %>
        </div>
      <% else %>
        <div class="leave-btn">
          <%= button_to "Leave", { controller: "rooms", action: "index"}, { method: :get } %>
        </div>
      <% end %>
    </div>
  </div>  
</div>