<%= render "shared/header" %>

<body>
<div class="whole">
  <div class="first-view">
    <%= image_tag asset_path("thomas-willmott-IAQp5dLXUZQ-unsplash.jpg"), class: "top-image" %>
    <h1>let's talk in English!</h1>
    <%= render "shared/lists" %>
  </div>

  <h3><span>room lists</span></h3>

  <div class="search">
    <%= search_form_for @p, url: search_rooms_path do |f| %>
      <%= f.collection_select :toeic_id_eq, @toeic, :toeic_id, :toeic_id,  include_blank: 'your TOEIC_level?'%>
      <input type="submit" class="fa fa-2x" value="&#xf002;">
    <% end %>
    <div class="create-room">
      <%= button_to "create room!", {controller: "rooms", action: "new"}, {method: :get, class: "create-room-btn"} %>
    </div>
  </div>

  <% if @rooms.present? %>
    <div class="rooms">
      <div class="room">
      <% @rooms.each do |room| %>
      <ul class="room-detail">
        <li class="room-user-infomation"> 
          <% if room.user.image? %>
            <%= image_tag room.user.image.url, class: "room-image" %>
          <% end %>
          <%= link_to room.user.name, user_path(room.user.id), class: "room-user-name" %>
        </li>
        <li class="room-name">
          <%= room.name %>
        </li> 
        <li class="room-toeic">
          <%= "TOEIC_level:#{room.toeic.name}" %>
        </li> 
        <li class="enter-room">
          <%= link_to "enter", room_path(room), class: "enter" %>
        </li>
        </ul>
      <% end %> 
      </div>
    </div>
  <% end %>
</div>
  
</body>
 <%= render "shared/footer" %>